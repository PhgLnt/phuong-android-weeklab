<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:state_enabled="true" android:color="@color/orange"
        >
        <shape>
            <stroke
                android:width="1dp"
                android:color="#FFA500" />
            <corners
                android:radius="40dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#FF000000"
                android:endColor="#FFCC99"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#ce3f1b" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
</selector>