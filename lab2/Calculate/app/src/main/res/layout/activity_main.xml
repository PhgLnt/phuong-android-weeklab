<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/EditTextResult"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_above="@id/btnDivi"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toLeftOf="@id/btnDelete"
        android:background="@color/orange"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/EditTextNumber"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@id/EditTextResult"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/orange"
        android:textColor="@color/white"
        android:gravity="right"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@id/btnDivi"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:text="AC"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnDivi"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnMulti"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:text="รท"
        android:textColor="#ffffff"
        android:textSize="50dp" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnSubtr"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_drawable"
        android:text="x"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:gravity="center"
        android:textSize="50dp" />
    <Button
        android:id="@+id/btnAdd"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="+"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnSubtr"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnAdd"
        android:layout_alignParentRight="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_drawable"
        android:text="-"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnEqual"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_toRightOf="@+id/btnum0"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="="
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnEqual"
        android:layout_toRightOf="@id/btnum2"
        android:text="3"
        android:layout_margin="5dp"
        android:textColor="@color/white"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum3"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btnum5"
        android:background="@drawable/button_drawable"
        android:text="6"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />

    <Button
        android:id="@+id/btnum9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum6"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btnum8"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:text="9"
        android:textColor="@color/white"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/btnDot"
        android:background="@drawable/button_drawable"
        android:text="0"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"   />
    <Button
        android:id="@+id/btnDot"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="."
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"   />
    <Button
        android:id="@+id/btnum1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnDot"
        android:layout_margin="5dp"
        android:text="1"
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"   />
    <Button
        android:id="@+id/btnum2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum0"
        android:layout_toRightOf="@id/btnum1"
        android:layout_margin="5dp"
        android:text="2"
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum1"
        android:layout_margin="5dp"
        android:text="4"
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum2"
        android:layout_toRightOf="@id/btnum4"
        android:layout_margin="5dp"
        android:text="5"
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />
    <Button
        android:id="@+id/btnum7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum4"
        android:layout_margin="5dp"
        android:text="7"
        android:background="@drawable/button_drawable"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="50dp"  />

    <Button
        android:id="@+id/btnum8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@id/btnum5"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/btnum7"
        android:background="@drawable/button_drawable"
        android:gravity="center"
        android:text="8"
        android:textColor="@color/white"
        android:textSize="50dp" />






</RelativeLayout>